{
  "name": "@glyph-lang/core",
  "version": "0.3.0",
  "description": "Glyph Language - Visual Data Flow Programming with Graph Execution",
  "main": "src/cli.js",
  "type": "module",
  "scripts": {
    "start": "node src/cli.js",
    "test": "node test-run.js",
    "dev": "node --watch src/cli.js run examples/hello-world.glyph",
    "repl": "node src/cli.js repl",
    "compile": "node src/cli.js compile examples/hello-world.glyph",
    "parse": "node src/cli.js parse examples/arithmetic.glyph",
    "examples": "node src/cli.js run examples/arithmetic.glyph",
    "coverage": "node --test test-run.js"
  },
  "keywords": [
    "visual-programming",
    "dataflow",
    "programming-language",
    "glyph",
    "graph-execution",
    "functional-programming",
    "types"
  ],
  "author": "Daktari Art",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daktari-art/glyph-lang"
  },
  "bin": {
    "glyph": "./src/cli.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/",
    "examples/",
    "README.md",
    "SPECIFICATION.md"
  ]
}
